#!/usr/bin/env bash
# Configure your domain zone so that the subdomain www points to your load-balancer IP (lb-01).

print_info () {
    registered_ip=$(dig "$2"."$1" | grep -A1 'Answered section:' | tr '\t' '\n' | tail -2 | tr '\n' ' ')
    echo "$2 $registered_ip" | awk '{print "The subdomain " $1 " is a " $2 " record and points to " $3}'
}

if [ "$#" == 1 ]
then
  print_info "$1" "www"
  print_info "$1" "lb-01"
  print_info "$1" "web-01"
  print_info "$1" "web-02"
elif [ "$#" == 2 ]
then
  print_info "$1" "$2"
fi